{
  "name": "gh-actions-workshop",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "all": "npm run prettier && npm run typecheck && npm run lint && npm run test && npm run build",
    "dev": "vite",
    "prettier": "prettier --check ./**/*.{ts,tsx,css,cjs} --cache --cache-strategy content '!package-lock.json'",
    "prettier:write": "prettier --write ./**/*.{ts,tsx,css,cjs} --cache --cache-strategy content '!package-lock.json'",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest run",
    "test:e2e": "export PLAYWRIGHT_BASE_DOMAIN=http://localhost:5173 && npx playwright test --project firefox",
    "build": "tsc && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-syntax-highlighter": "^15.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.44.0",
    "@types/node": "^20.12.11",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "prettier": "^3.2.5",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vitest": "^1.6.0"
  }
}
